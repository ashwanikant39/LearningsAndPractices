                            @Html.AntiForgeryToken()

                            <div class="input-group">
                                <input type="email" name="EMAIL" class="form-control" placeholder="Your Email Address" data-height="37px" id="idEMAIL">
                                <div class="form_icon"><i class="fas fa-envelope"></i></div>
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-colored btn-theme-colored m-0 bt1" onclick="Subscriptionpost()"><i class="fas fa-paper-plane text-white"></i></button>
                                </span>
                            </div>
                        }
