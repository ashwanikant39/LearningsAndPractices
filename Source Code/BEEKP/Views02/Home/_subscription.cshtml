<!-- JS | jquery plugin collection for this theme -->
<script src="~/js/jquery-plugin-collection.js"></script>
<script>
    $(document).ready(function () {

    });
    AddAntiForgeryToken = function (data) {
        data = $('#frmSubscription input[name=__RequestVerificationToken]').val();
        return data;
    };
    function Subscriptionpost() {
        var email_val = $("#idEMAIL").val();
        //$("#divEnergyTechnologies").html("");
        $.ajax({

            url: 'Home/Subscription/',
            cache: false,
            //headers: { '__RequestVerificationToken': token },
            //contentType: 'application/json; charset=utf-8',
            data: AddAntiForgeryToken({ _email_val: email_val }),
            async: false,
            type: 'POST',
            success: function (result) {
                console.log(result);
                if (result["MessageId"] > 0) {
                    $('#idEMAIL').val('');
                    alert(result["Message"]);
                }
                else {
                    alert(result["Message"]);
                }
            },
            error: function (result) {
                isSuccess = result;

            }

        }).done(function () {
        });
    }
</script>
