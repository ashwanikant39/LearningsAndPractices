                                @Html.DropDownList("Sector", new SelectList(Model.ListSector, "sector_id", "sector_name", "--Select--"), new { @class = "form-control small-height-field", @id = "ddlSector", @tabindex = "1"@*, @onchange = "PopulateVideo()"*@ })
