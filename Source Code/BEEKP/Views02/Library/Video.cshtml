<script>
    function PopulateVideo() {

       
        var sector_id = $("#ddlSector").val();
        $("#divVideos").html("");

        $.ajax({

            url: '/Library/GetVideosBySector',
            data: AddAntiForgeryToken({ _sector_id: sector_id }),
            async: false,
            type: 'POST',
            success: function (result) {

                if (result.Data == 'error') {
                    window.location.href = "/Error/GeneralError";
                }
                else {
                    $("#divVideos").html(result).show();
                }
            },
            error: function (result) {
                isSuccess = result;
            }

        }).done(function () {
        });



    }
</script>
