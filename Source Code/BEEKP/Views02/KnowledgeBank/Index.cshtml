@model BEEKP.Models.KnowledgeBankViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "KnowledgeBank", FormMethod.Post, new { @id = "frmKnowledgeBankIndex", @name = "frmKnowledgeBankIndex" }))
{
    @Html.AntiForgeryToken()

        <!-- BEGIN PAGE CONTENT -->
    <div class="container pt-10">
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light">

                    <div id="divmanufacturers">
                        <h4 class="text-theme-colored">Knowledge Bank</h4>
                        <hr />
                        <div id="acdClusterDetails" class="panel-group accordion">
                            @for (Int32 i = 0; i < Model.ListKnowledgeBankModel.Count; i++)
                            {
                                <div class="panel">
                                    <div class="panel-title"> <a data-parent="#acdClusterDetails" data-toggle="collapse" href="#@Model.ListKnowledgeBankModel[i].KnowledgeBankType.knowledge_bank_type_id" class="" aria-expanded="true"> <span class="open-sub"></span> @Model.ListKnowledgeBankModel[i].KnowledgeBankType.knowledge_bank_type_name</a> </div>
                                    <div id="@Model.ListKnowledgeBankModel[i].KnowledgeBankType.knowledge_bank_type_id" class="panel-collapse collapse" role="tablist" aria-expanded="true">
                                        <div class="panel-content">
                                            @if (Model.ListKnowledgeBankModel[i].ListKnowledgeBank != null && Model.ListKnowledgeBankModel[i].ListKnowledgeBank.Count > 0)
                                            {
                                                <table id="tblEnergyProfessionals" class="table table-striped table-hover table-bordered table-small-padding table-Valign-middle">

                                                    <thead>
                                                        <tr>
                                                            <th>
                                                                Sl. No.
                                                            </th>
                                                            <th>
                                                                Name
                                                            </th>
                                                            <th style="text-align:center">
                                                                View
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        @for (Int32 j = 0; j < Model.ListKnowledgeBankModel[i].ListKnowledgeBank.Count; j++)
                                                        {
                                                            Int32 Slno = j + 1;
                                                            <tr>
                                                                <td>
                                                                    @Slno
                                                                </td>
                                                                <td>
                                                                    @Model.ListKnowledgeBankModel[i].ListKnowledgeBank[j].knowledge_bank_name
                                                                </td>
                                                               
                                                                    <td style="text-align:center">
                                                                        <a href="~/documents/Knowledge_Bank/@Model.ListKnowledgeBankModel[i].ListKnowledgeBank[j].file_name" target="_blank">
                                                                            @*@Model.ListKnowledgeBankModel[i].ListKnowledgeBank[j].file_name*@
                                                                            <i class="fa fa-file-pdf-o"></i>
                                                                        </a>
                                                                    </td>
                                                                
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            }

                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->

    </div>

}
