@model BEEKP.Areas.Admin.Models.AdminKnowledgeBankViewModel

@if (Model.ListKnowledgeBankActive != null)
{
    <table id="tblKnowledgeBankActive" class="table table-striped table-hover table-bordered">

        <thead>
            <tr>
                <th>
                    Library Type
                </th>
                <th>
                    File Name
                </th>
                <th>
                    Document
                </th>
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @for (Int32 i = 0; i < Model.ListKnowledgeBankActive.Count; i++)
                {

                <tr>
                    <td>
                        <label>@Model.ListKnowledgeBankActive[i].knowledge_bank_type_name </label>
                    </td>
                    <td>
                        <label>@Model.ListKnowledgeBankActive[i].knowledge_bank_name</label>
                    </td>
                    <td>
                     <a href="~/documents/Knowledge_Bank/@Model.ListKnowledgeBankActive[i].file_name">@Model.ListKnowledgeBankActive[i].file_name</a>  
                    </td>
                    <td align="center" valign="middle">
                        @if (Model.PagePermission.role_edit == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            <a href="@Url.Action("ManageKnowledgeBank", "AdminKnowledgeBank", new { sknowledge_bank_id = BEEKP.Class.Encryption.Encrypt(Model.ListKnowledgeBankActive[i].knowledge_bank_id.ToString(), true) })" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                        }
                        @if (Model.PagePermission.role_delete == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            @Html.Raw("|");
                            <a href="@Url.Action("DeleteKnowledgeBank", "AdminKnowledgeBank", new { sknowledge_bank_id = BEEKP.Class.Encryption.Encrypt(Model.ListKnowledgeBankActive[i].knowledge_bank_id.ToString(), true), sfileKnowledgeDoc = Model.ListKnowledgeBankActive[i].file_name })" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                        }
                    </td>
                </tr>
            }





        </tbody>
    </table>
}





