@model BEEKP.Areas.Admin.Models.ProjectComponentManageModel
@{
    ViewBag.Title = "ManageProjectComponent";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("ManageProjectComponent", "AdminProjectComponent", FormMethod.Post, new { @id = "frmManageProjectComponent", @name = "frmManageProjectComponent", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => Model.ProjectComponent.project_component_id)

    @Html.HiddenFor(model => Model.PagePermission.role_view)
    @Html.HiddenFor(model => Model.PagePermission.role_add)
    @Html.HiddenFor(model => Model.PagePermission.role_edit)
    @Html.HiddenFor(model => Model.PagePermission.role_delete)


    <div class="page-head">
        <div class="container">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>@Model.PagePermission.file_name</h1>
            </div>
            <!-- END PAGE TITLE -->

        </div>
    </div>
    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN VALIDATION STATES-->
                    <div class="portlet light">
                        <div class="portlet-title">
                            <div class="caption">
                                <span class="caption-subject font-green-sharp bold uppercase">Manage Project Component</span> <small class="small-font-cuatom">Fields marked with asterisk (<span class="required-asterisk"> * </span>) are mandatory to fill in </small>
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <div class="horizontal-form ">
                                <div class="form-body form-body-small-padding">
                                    @*<h3 class="form-section page-title mandatory-note">&nbsp <small>Fields marked with asterisk (<span class="required-asterisk"> * </span>) are mandatory to fill in </small></h3>*@

                                    <!--body start-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="col-md-12">
                                                <div class="form-group clearfix">
                                                    <label class="control-label col-md-4">Image Title<span class="required">* </span></label>
                                                    <div class="col-md-8">
                                                        @Html.TextBoxFor(model => model.ProjectComponent.project_component_title, new { @class = "form-control required", @id = "project_component_title", @Placeholder = "Image Title" })
                                                        @Html.ValidationMessageFor(model => model.ProjectComponent.project_component_title, "", new { @class = "text-denger" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group clearfix">
                                                    <label class="control-label col-md-4">Active/Visible</label>
                                                    <div class="col-md-8">
                                                        @Html.CheckBoxFor(model => model.ProjectComponent.status, new { @class = "icheck", @id = "status", @Placeholder = "Status" })
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group clearfix">
                                                    <label class="control-label col-md-4">Image<span class="required">* </span></label>
                                                    <div class="col-md-8">
                                                        <div class="input-group">
                                                            <span class="input-group-btn">
                                                                <span class="btn btn-default btn-file">
                                                                    Browse&hellip;
                                                                    @Html.TextBoxFor(m => m.ProjectComponent.project_component_image_name, new { type = "file", Name = "file", placeholder = Html.DisplayNameFor(m => m.ProjectComponent.project_component_image_name), @id = "ProjectComponentImage", @class = "form-control", accept = ".png,.jpg,.jpeg,.tiff,.bmp" })
                                                                    @Html.HiddenFor(m => m.ProjectComponent.project_component_image_name)
                                                                </span>
                                                            </span>
                                                            <input type="text" class="form-control" value="@Model.ProjectComponent.project_component_image_name" readonly>
                                                        </div>
                                                        <span class="help-block">Max file size 1MB (.jpg/.png/.TIF) </span>
                                                        <span id="spnDocumentUpload" style="color:red" class="file-error-message">
                                                        </span>
                                                        @*@Html.ValidationMessageFor(model => model.Photo.photo_name, "", new { @class = "text-denger" })*@
                                                        <br />
                                                        @if (Model.ProjectComponent.project_component_image_name != null && Model.ProjectComponent.project_component_image_name != "")
                                                        {
                                                        <img src="~/images/ProjectComponent/@Model.ProjectComponent.project_component_image_name" alt="Image" id="PCImage" width="100px">
                                                        }
                                                        else
                                                        {
                                                        <img src="~/images/NoImage.png" alt="Image" id="PCImage" width="100px">
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                            @*<div class="col-md-6">
                                                    <div class="form-group clearfix">
                                                        <label class="control-label col-md-4">Short Description</label>
                                                        <div class="col-md-8">
                                                            @Html.TextBoxFor(model => model.ProjectComponent.project_component_short_description, new { @class = "form-control", @id = "project_component_short_description", @Placeholder = "Short Description" })
                                                        </div>
                                                    </div>
                                                </div>*@
                                        </div>
                                        <div class="col-md-6">
                                            <div class="col-md-12">
                                                <div class="form-group clearfix">
                                                    <label class="control-label col-md-3">Description</label>
                                                    <div class="col-md-9" id="vckEditorEmailBody">
                                                        @Html.TextAreaFor(model => model.ProjectComponent.project_component_full_description, new { @class = "ckeditor form-control required", @id = "ckProjectComponent", @rows = 3, @cols = 12 })
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                                <!--Footer-->
                                <div class="form-actions right">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="button" class="btn default" onclick="location.href='@Url.Action("Index", "AdminProjectComponent", new {})'">Back</button>
                                            <button type="submit" class="btn blue blue-custom" name="btnAction"><i class="fa fa-check"></i>Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- END FORM-->
                        </div>
                        <!-- END VALIDATION STATES-->
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- BEGIN VALIDATION STATES-->



}
@Scripts.Render("~/bundles/area/js/global")
@Scripts.Render("~/bundles/area/js/validate")
@Scripts.Render("~/bundles/area/appjs/projectcomponent_manage")

<script type="text/javascript" src="~/assets/global/plugins/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('ckProjectComponent', {
        // Define the toolbar groups as it is a more accessible solution.
        toolbarGroups: [
            { "name": "basicstyles", "groups": ["basicstyles"] },
            //{ "name": "links", "groups": ["links"] },
            { "name": "paragraph", "groups": ["list", "blocks"] },
           // { "name": "document", "groups": ["mode"] },
            //{ "name": "insert", "groups": ["insert"] },
            //{ "name": "styles", "groups": ["styles"] }
           // { "name": "about", "groups": ["about"] }
        ],
        // Remove the redundant buttons from toolbar groups defined above.
        removeButtons: 'Underline,Strike,Subscript,Superscript,Anchor,Styles,Specialchar'
    });
</script>