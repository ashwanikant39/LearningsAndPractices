@model BEEKP.Areas.Admin.Models.AdminVideoGalleryViewModel


@if (Model.ListVideoActive != null)
{

    <table id="tblVideoActive" class="table table-striped table-hover table-bordered action-column-custom">

        <thead>
            <tr>
                <th>
                    Video Image
                </th>
                <th>
                    Video Title
                </th>
                <th>
                    Video Url
                </th>
                <th>
                    Sector
                </th>
                <th>
                    Show in Dashboard
                </th>
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @{


                for (Int32 i = 0; i < Model.ListVideoActive.Count; i++)
                {

                        <tr>
                            <td>
                                @if (Model.ListVideoActive[i].video_image_name != null && Model.ListVideoActive[i].video_image_name != "")
                                {
                                    <img src="~/images/Gallery/Video/@Model.ListVideoActive[i].video_image_name" alt="Photo" width="100px">
                                }
                                else
                                {
                                    <img src=@BEEKP.Class.Constants.NO_IMAGE alt="Photo" width="100px">
                                }
                            </td>
                            <td>
                                <label>@Model.ListVideoActive[i].video_title </label>
                            </td>
                            <td>
                                <label>@Model.ListVideoActive[i].video_url </label>
                            </td>
                            <td>
                                <label>@Model.ListVideoActive[i].sectors_name</label>
                            </td>
                            <td>
                                @if (Model.ListVideoActive[i].display_dashboard == true)
                                {
                                    <label>Yes</label>
                                }
                                else
                                {
                                    <label>No</label>
                                }
                            </td>
                            <td align="center" valign="middle">
                                @if (Model.PagePermission.role_edit == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                                {
                                    <a href="@Url.Action("ManageVideo", "Gallery", new { svideo_id = BEEKP.Class.Encryption.Encrypt(Model.ListVideoActive[i].video_id.ToString(), true)})" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                                }

                                @if (Model.PagePermission.role_delete == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                                {
                                    @Html.Raw("|");
                                    <a href="@Url.Action("DeleteVideo", "Gallery", new { svideo_id =BEEKP.Class.Encryption.Encrypt(Model.ListVideoActive[i].video_id.ToString(),true), svideo_name=Model.ListVideoActive[i].video_image_name})" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                                }



                            </td>
                        </tr>
                }

            }


        </tbody>
    </table>
                }
