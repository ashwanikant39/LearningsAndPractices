@model BEEKP.Areas.Admin.Models.AdminPhotoGalleryViewModel


@if (Model.ListPhotoGalleryActive != null)
{

    <table id="tblPhotoActive" class="table table-striped table-hover table-bordered action-column-custom">

        <thead>
            <tr>
                <th>
                    Photo Name
                </th>
                <th>
                    Photo Title
                </th>
                <th>
                    Show in Dashboard
                </th>
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @{


                for (Int32 i = 0; i < Model.ListPhotoGalleryActive.Count; i++)
                {

                    <tr>
                        <td>
                            @if (Model.ListPhotoGalleryActive[i].photo_name != null && Model.ListPhotoGalleryActive[i].photo_name != "")
                            {
                                <img src="~/images/Gallery/Photo/@Model.ListPhotoGalleryActive[i].photo_name" alt="Photo" width="100px">
                            }
                            else
                            {
                                <img src=@BEEKP.Class.Constants.NO_IMAGE alt="Photo" width="100px">
                            }
                        </td>
                        <td>
                            <label>@Model.ListPhotoGalleryActive[i].photo_title </label>
                        </td>
                        <td>
                            @if (Model.ListPhotoGalleryActive[i].display_dashboard == true)
                            {
                                <label>Yes</label>
                            }
                            else
                            {
                                <label>No</label>
                            }
                        </td>

                        <td align="center" valign="middle">
                            @if (Model.PagePermission.role_edit == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                            {
                                <a href="@Url.Action("ManagePhoto", "Gallery", new { sphoto_id = BEEKP.Class.Encryption.Encrypt(Model.ListPhotoGalleryActive[i].photo_id.ToString(), true)})" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                            }

                            @if (Model.PagePermission.role_delete == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                            {
                                @Html.Raw("|");
                                <a href="@Url.Action("DeletePhoto", "Gallery", new { sphoto_id =BEEKP.Class.Encryption.Encrypt(Model.ListPhotoGalleryActive[i].photo_id.ToString(),true), sphoto_name=Model.ListPhotoGalleryActive[i].photo_name})" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                            }



                        </td>
                    </tr>
                }

            }


        </tbody>
    </table>
                }
