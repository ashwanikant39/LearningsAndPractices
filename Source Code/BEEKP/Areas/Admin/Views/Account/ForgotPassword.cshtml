@model BEEKP.Areas.Admin.Models.ForgetPasswordViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<link href="~/assets/admin/layout3/css/style-admin.css" rel="stylesheet" />
@using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @id = "frmForgotPassword", @name = "frmForgotPassword" }))
{
    @Html.AntiForgeryToken()

    <!-- Section: home -->
    <section id="home" class="divider bg-lighter">
        <div class="display-table">
            <div class="display-table-cell">
                <div class="container">
                    <div class="row">
                        <div class="col-md-6 col-md-push-3">
                            <div class="text-center width-100 mb-10 margin-auto"><a href="../Home/Index"><img alt="" src="~/images/login-logo.png"></a></div>

                            <div class="text-align-center">
                                <p>
                                    <strong>
                                        The GEF - World Bank Project<br />
                                        Financing Energy Efficiency at MSMEs
                                    </strong>
                                </p>
                            </div>
                            @*@if (ViewBag["MessageID"] == 1 )
                                {
                                    @ViewBag["Message"]
                                }
                                @if (ViewBag["MessageID"] == 0)
                                {
                                    @ViewBag["Message"]
                                }*@
                            <hr />

                            <h4 class="text-theme-colored mt-0 pt-5"> Registered Email-Id</h4>

                            <div class="row">
                                <div class="form-group col-md-12">
                                    <div class="form-group cleacrfix">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-envelope"></i>
                                            </span>
                                            @Html.TextBoxFor(model => Model.email_id, new { @class = "form-control input-icon", @id = "txtMailId", @Placeholder = "Registered Email Id", autocomplete = "off" })
                                        </div>
                                        @Html.ValidationMessageFor(model => Model.email_id, "", new { @class = "text-denger" })
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="g-recaptcha" data-sitekey="@ViewBag.sitekey"></div>
                            </div>
                            <div class="form-group pull-right mt-10">
                                <button type="submit" class="btn btn-sm btn-theme-colored">Submit </button>
                            </div>
                            <div class="text-denger">@Html.ValidationSummary(true)</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

}
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/assets/global/plugins/jquery-validation/js/jquery.validate.min.js"></script>
<script src="~/AppJS/ForgotPassword/ForgotPassword_Manage.js"></script>

