@model BEEKP.Areas.Admin.Models.AdminRoleViewModel

@if (Model.ListRole != null)
{
    <table id="tblRole" class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th>
                    Role Name
                </th>
                <th>
                    Role Description
                </th>
                <th>
                    User Type Name
                </th>
                <th>
                    Landing File Name
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @for (Int32 i = 0; i < Model.ListRole.Count; i++)
                {
                <tr>
                    <td>
                        <label>@Model.ListRole[i].role_name</label>
                    </td>
                    <td>
                        <label>@Model.ListRole[i].role_description </label>
                    </td>
                    <td>
                        <label>@Model.ListRole[i].user_type_name</label>
                    </td>
                    <td>
                        <label>@Model.ListRole[i].file_name</label>
                    </td>
                    <td>
                        <a href="@Url.Action("Manage", "Role", new { sRoleID = BEEKP.Class.Encryption.Encrypt(Model.ListRole[i].role_id.ToString(),true)})" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                        <a href="@Url.Action("DeleteRole", "Role", new { sRole_id = BEEKP.Class.Encryption.Encrypt(Model.ListRole[i].role_id.ToString(),true)})" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}





