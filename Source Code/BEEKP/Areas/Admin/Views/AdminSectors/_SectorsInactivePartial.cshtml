@model BEEKP.Areas.Admin.Models.AdminSectorsViewModel


@if (Model.ListSectorsInactive != null)
{
    <table id="tblSectorsInactive" class="table table-striped table-hover table-bordered">

        <thead>
            <tr>
                <th>
                    Sectors Image
                </th>
                <th>
                    Sectors Title
                </th>
                <th>
                    Sectors Location
                </th>
                <th>
                    Sectors Short Description
                </th>
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @for (Int32 i = 0; i < Model.ListSectorsInactive.Count; i++)
            {

                <tr>
                    <td>
                        @if (Model.ListSectorsInactive[i].sectors_image_name != null && Model.ListSectorsInactive[i].sectors_image_name != "")
                        {
                            <img src="~/images/Sectors/@Model.ListSectorsInactive[i].sectors_image_name" alt="Sectors Image" width="100px">
                        }
                        else
                        {
                            <img src=@BEEKP.Class.Constants.NO_IMAGE alt="Event Image" width="100px">
                        }
                    </td>
                    <td>
                        <label>@Model.ListSectorsInactive[i].sectors_name</label>
                    </td>
                    <td>
                        <label>@Model.ListSectorsInactive[i].sectors_location </label>
                    </td>
                    <td>
                        <label>@Model.ListSectorsInactive[i].sectors_short_description </label>
                    </td>
                    <td align="center" valign="middle">
                        @if (Model.PagePermission.role_edit == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            <a href="@Url.Action("SectorsAddEdit", "AdminSectors", new { sSectorsID = BEEKP.Class.Encryption.Encrypt(Model.ListSectorsInactive[i].sectors_id.ToString(), true) })" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                        }

                        @if (Model.PagePermission.role_delete == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            @Html.Raw("|");
                            <a href="@Url.Action("DeleteSectors", "AdminSectors", new { sSectorsID =  BEEKP.Class.Encryption.Encrypt(Model.ListSectorsInactive[i].sectors_id.ToString(),true), sSectors_image_name = Model.ListSectorsInactive[i].sectors_image_name})" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}