@model BEEKP.Areas.Admin.Models.SectorsViewAddEditModel

@if (Model.Sectors.listSectorsImage != null)
{
    <table id="tblSectorsImage" class="table table-striped table-hover table-bordered">

        <thead>
            <tr>
                <th>
                    Sectors Image
                </th>
                <th>
                    Sectors Image Name
                </th>
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @for (Int32 i = 0; i < Model.Sectors.listSectorsImage.Count; i++)
            {

                <tr>
                    <td>
                        @if (Model.Sectors.listSectorsImage[i].sectors_image_name != null && Model.Sectors.listSectorsImage[i].sectors_image_name != "")
                        {
                            <img src="~/images/Sectors/@Model.Sectors.listSectorsImage[i].sectors_image_name" alt="Sectors Inage" width="100px">
                        }
                        else
                        {
                            <img src=@BEEKP.Class.Constants.NO_IMAGE alt="Event Inage" width="100px">
                        }
                    </td>
                    <td>
                        <label>@Model.Sectors.listSectorsImage[i].sectors_image_name</label>
                    </td>
                    <td align="center" valign="middle">
                        <a href="@Url.Action("SectorsImageAddEdit", "AdminSectors", new { sSectorsID = BEEKP.Class.Encryption.Encrypt(Model.Sectors.listSectorsImage[i].sectors_id.ToString(), true),sSectorsImageID=BEEKP.Class.Encryption.Encrypt(Model.Sectors.listSectorsImage[i].sectors_image_id.ToString(), true) })" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                        |
                        <a href="@Url.Action("DeleteSectorsImage", "AdminSectors", new { sSectorsID = BEEKP.Class.Encryption.Encrypt(Model.Sectors.listSectorsImage[i].sectors_id.ToString(), true), sSectorsImageID = BEEKP.Class.Encryption.Encrypt(Model.Sectors.listSectorsImage[i].sectors_image_id.ToString(),true),sSectors_image_name = Model.Sectors.listSectorsImage[i].sectors_image_name})" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}