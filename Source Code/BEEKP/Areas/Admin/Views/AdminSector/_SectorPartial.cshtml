@model BEEKP.Areas.Admin.Models.AdminSectorViewModel


@if (Model.ListSector != null)
{

    <table id="tblSector" class="table table-striped table-hover table-bordered action-column-custom">

        <thead>
            <tr>
                <th>
                    Sector name
                </th>
                
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @{


                for (Int32 i = 0; i < Model.ListSector.Count; i++)
                {



                    <tr>
                        <td>
                            <label>@Model.ListSector[i].sector_name</label>
                        </td>
                        
                        
                        <td align="center" valign="middle">
                            @if (Model.PagePermission.role_edit == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                            {
                                <a href="@Url.Action("ManageSector", "AdminSector", new { ssector_id = BEEKP.Class.Encryption.Encrypt(Model.ListSector[i].sector_id.ToString(), true)})" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                            }
                            
                            @if (Model.PagePermission.role_delete == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                            {
                                @Html.Raw("|");
                                <a href="@Url.Action("DeleteSector", "AdminSector", new { ssector_id =BEEKP.Class.Encryption.Encrypt(Model.ListSector[i].sector_id.ToString(),true)})" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                            }
                        </td>
                    </tr>
                }

            }


        </tbody>
    </table>
                }




