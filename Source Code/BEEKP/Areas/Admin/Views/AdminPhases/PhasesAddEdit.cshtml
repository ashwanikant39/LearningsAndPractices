@model BEEKP.Areas.Admin.Models.AdminPhasesViewModel

@{
    ViewBag.Title = "PhasesAddEdit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("PhasesAddEdit", "AdminPhases", FormMethod.Post, new { @id = "frmPhasesAddEdit", @name = "frmPhasesAddEdit", enctype = "multipart/form-data" }))

{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => Model.Phases.phases_id)
    @Html.HiddenFor(model => Model.PagePermission.file_name)
    @Html.HiddenFor(model => Model.PagePermission.role_view)
    @Html.HiddenFor(model => Model.PagePermission.role_add)
    @Html.HiddenFor(model => Model.PagePermission.role_edit)
    @Html.HiddenFor(model => Model.PagePermission.role_delete)

    <div class="page-head">
        <div class="container">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>@Model.PagePermission.file_name</h1>
            </div>
            <!-- END PAGE TITLE -->

        </div>
    </div>
    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN VALIDATION STATES-->
                    <div class="portlet light">
                        <div class="portlet-title">
                            <div class="caption">
                                <span class="caption-subject font-green-sharp bold uppercase">Manage Phases</span> <small class="small-font-cuatom">Fields marked with asterisk (<span class="required-asterisk"> * </span>) are mandatory to fill in </small>
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <div class="horizontal-form ">
                                <div class="form-body form-body-small-padding">
                                    @*<h3 class="form-section page-title mandatory-note">&nbsp <small>Fields marked with asterisk (<span class="required-asterisk"> * </span>) are mandatory to fill in </small></h3>*@

                                    <!--body start-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Phases Title<span class="required">* </span></label>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(model => model.Phases.phases_title, new { @class = "form-control required", @id = "phasesTitle", @Placeholder = "Phases Title" })
                                                    @Html.ValidationMessageFor(model => model.Phases.phases_title, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Phases Start Date<span class="required">* </span></label>
                                                <div class="col-md-8">
                                                    <div class="input-group date" data-link-field="hfEventDate" id="divPhasesDate">
                                                        @Html.TextBoxFor(model => model.Phases.phases_start_date, new { @class = "form-control required", @id = "txtphases_date", @readonly = "readonly", @Placeholder = "Phase Start Date" })
                                                        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span></span>
                                                        @Html.HiddenFor(model => model.Phases.phases_start_date, new { @id = "hfEventDate" })
                                                    </div>
                                                    @Html.ValidationMessageFor(model => model.Phases.phases_start_date, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                            @*<div class="form-group clearfix">
                            <label class="control-label col-md-4">Short Description</label>
                            <div class="col-md-8">
                                @Html.TextAreaFor(model => model.Phases.phases_short_description, new { @class = "form-control", @id = "txtevent_short_description", @Placeholder = "Phase Short Description", @rows = "7", @maxlength = "50" })
                                @Html.ValidationMessageFor(model => model.Phases.phases_short_description, "", new { @class = "text-denger" })
                            </div>
                        </div>*@
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Short Description</label>
                                                <div class="col-md-8">
                                                    @Html.TextAreaFor(model => model.Phases.phases_short_description, new { @class = "form-control", @id = "txtevent_short_description", @Placeholder = "Phase Short Description", @rows = "7", @maxlength = "50" })
                                                    @Html.ValidationMessageFor(model => model.Phases.phases_short_description, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Active</label>
                                                <div class="col-md-8">
                                                    @Html.CheckBoxFor(model => model.Phases.status, new { @class = "icheck", @id = "status", @Placeholder = "Status" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                    <div class="col-md-12">
                <div class="form-group clearfix">
                        <label class="control-label col-md-2">Full Description<span class="required">* </span></label>
                        <div class="col-md-12" id="vckEditorEmailBody">
                            @Html.TextAreaFor(model => model.Phases.phases_full_description, new { @class = "ckeditor form-control", @id = "ckEvent", @rows = 3, @cols = 22 })
                        </div>
                        </div>
                        </div>
                                        </div>
                                </div>
                                <!--Footer-->
                                <div class="form-actions right">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="button" class="btn default" onclick="location.href='@Url.Action("Index", "AdminPhases", new { })'">Back</button>
                                            <button type="submit" class="btn blue blue-custom" name="btnAction"><i class="fa fa-check"></i>Save</button>
                                        </div>
                                    </div>
                                </div>

                            </div>
                            <!-- END FORM-->
                        </div>
                        <!-- END VALIDATION STATES-->
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- BEGIN VALIDATION STATES-->

}



@Scripts.Render("~/bundles/area/js/global")
@Scripts.Render("~/bundles/area/js/validate")
@Scripts.Render("~/bundles/area/js/datetimepicker")
@Scripts.Render("~/bundles/area/appjs/phases_addedit")
@Scripts.Render("~/bundles/area/js/datatables")

