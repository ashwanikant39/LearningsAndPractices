@model BEEKP.Areas.Admin.Models.CaseStudyManageModel
@{
    ViewBag.Title = "ManageCaseStudy";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("ManageCaseStudy", "AdminCaseStudy", FormMethod.Post, new { @id = "frmCaseStudyManage", @name = "frmCaseStudyManage", enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => Model.CaseStudy.casestudy_id)

    @Html.HiddenFor(model => Model.PagePermission.role_view)
    @Html.HiddenFor(model => Model.PagePermission.role_add)
    @Html.HiddenFor(model => Model.PagePermission.role_edit)
    @Html.HiddenFor(model => Model.PagePermission.role_delete)


    <div class="page-head">
        <div class="container">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>@Model.PagePermission.file_name</h1>
            </div>
            <!-- END PAGE TITLE -->

        </div>
    </div>
    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN VALIDATION STATES-->
                    <div class="portlet light">
                        <div class="portlet-title">
                            <div class="caption">
                                <span class="caption-subject font-green-sharp bold uppercase">Manage Case Study</span> <small class="small-font-cuatom">Fields marked with asterisk (<span class="required-asterisk"> * </span>) are mandatory to fill in </small>
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <div class="horizontal-form ">
                                <div class="form-body form-body-small-padding">
                                    @*<h3 class="form-section page-title mandatory-note">&nbsp <small>Fields marked with asterisk (<span class="required-asterisk"> * </span>) are mandatory to fill in </small></h3>*@

                                    <!--body start-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Cluster Name<span class="required">* </span></label>
                                                <div class="col-md-8">
                                                    @Html.DropDownListFor(model => Model.CaseStudy.cluster_id, new SelectList(Model.ListCluster, "cluster_id", "cluster_name", ""), new { @class = "form-control required", @id = "ddlcluster", autocomplete = "off" })
                                                    @Html.ValidationMessageFor(model => model.CaseStudy.cluster_name, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                            
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Upload Document</label>
                                                <div class="col-md-8">
                                                    <div class="input-group">
                                                        <span class="input-group-btn">
                                                            <span class="btn btn-default btn-file">
                                                                Browse&hellip;
                                                                @Html.TextBoxFor(m => m.CaseStudy.file_name, new { type = "file", Name = "fileCaseStudyDoc", placeholder = Html.DisplayNameFor(m => m.CaseStudy.file_name), @id = "file", @class = "form-control", accept = ".pdf" })
                                                                @Html.HiddenFor(m => m.CaseStudy.file_name)
                                                            </span>
                                                        </span>
                                                        <input type="text" class="form-control" value="@Model.CaseStudy.file_name" readonly>
                                                    </div>
                                                    <span class="help-block">Max file size 20MB (.pdf) </span>
                                                    <span id="spnDocumentUpload" style="color:red" class="file-error-message"></span>
                                                    <br />
                                                    @*@Html.TextBox("file", "", new { type = "file", @id="fileEventImage" })*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">EE Keywords<span class="required">* </span></label>
                                                <div class="col-md-8">
                                                    @Html.TextAreaFor(model => model.CaseStudy.ee_keywords, new { @class = "form-control required", @id = "casestudy_detail", @Placeholder = "EE Keywords", @rows = "4" })
                                                    @Html.ValidationMessageFor(model => model.CaseStudy.ee_keywords, "", new { @class = "text-denger" })
                                                </div>
                                            </div>

                                        </div>
                                        <div class="col-md-6">
                                            
                                        </div>
                                    </div>
                                </div>
                                <!--Footer-->
                                <div class="form-actions right">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="button" class="btn default" onclick="location.href='@Url.Action("Index", "AdminCaseStudy", new {})'">Back</button>
                                            <button type="submit" class="btn blue blue-custom" name="btnAction"><i class="fa fa-check"></i>Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- END FORM-->
                        </div>
                        <!-- END VALIDATION STATES-->
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- BEGIN VALIDATION STATES-->



}
@Scripts.Render("~/bundles/area/js/global")
@Scripts.Render("~/bundles/area/js/validate")
@Scripts.Render("~/bundles/area/appjs/casestudy_manage")