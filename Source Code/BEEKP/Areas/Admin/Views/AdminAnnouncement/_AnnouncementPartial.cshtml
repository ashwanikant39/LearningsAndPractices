@model BEEKP.Areas.Admin.Models.AdminAnnouncementViewModel

@if (Model.ListAnnouncement != null)
{

    <table id="tblAnnouncement" class="table table-striped table-hover table-bordered action-column-custom">

        <thead>
            <tr>
                <th>
                    Announcemenet Title
                </th>
                <th>
                    Announcemenet Date
                </th>
                <th>
                    Short Description
                </th>
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @{


                for (Int32 i = 0; i < Model.ListAnnouncement.Count; i++)
                {



                        <tr>
                            <td>
                                <label>@Model.ListAnnouncement[i].announce_title</label>
                            </td>
                            <td>
                                <label>@Model.ListAnnouncement[i].announce_date </label>
                            </td>
                            <td>
                                <label>@Model.ListAnnouncement[i].announce_short_description </label>
                            </td>
                            <td align="center" valign="middle">
                                @if (Model.PagePermission.role_edit == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                                {
                                    <a href="@Url.Action("AnnouncementAddEdit", "AdminAnnouncement", new { sAnnouncementID = BEEKP.Class.Encryption.Encrypt(Model.ListAnnouncement[i].announce_id.ToString(), true)})" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                                }

                                @if (Model.PagePermission.role_delete == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                                {
                                    @Html.Raw("|");
                                    <a href="@Url.Action("DeleteAnnouncement", "AdminAnnouncement", new { sAnnouncementID =BEEKP.Class.Encryption.Encrypt(Model.ListAnnouncement[i].announce_id.ToString(),true)})" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                                }
                            </td>
                        </tr>
                }

            }


        </tbody>
    </table>
}