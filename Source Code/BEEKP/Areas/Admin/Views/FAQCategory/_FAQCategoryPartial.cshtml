@model BEEKP.Areas.Admin.Models.AdminFAQCategoryViewModel

@if (Model.ListFAQCategory != null)
{
    <table id="tblFAQCategory" class="table table-striped table-hover table-bordered">

        <thead>
            <tr>
                <th>
                    Cluster Name 
                </th>
                <th>
                    Category Name
                </th>
                <th>
                    Status
                </th>                
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @for (Int32 i = 0; i < Model.ListFAQCategory.Count; i++)
            {
                var active = "Active";
                var Inactive = "Inactive";


                <tr>
                    <td>
                        <label>@Model.ListFAQCategory[i].cluster_name</label>
                    </td>
                    <td>
                        <label>@Model.ListFAQCategory[i].category_name </label>
                    </td>
                    @if (Model.ListFAQCategory[i].status == true)
                    {
                    <td>
                        <label>@active</label>
                    </td>
                    }
                    else
                    {
                        <td>
                            <label>@Inactive</label>
                        </td>
                    }
                    <td align="center" valign="middle">
                        @if (Model.PagePermission.role_edit == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            <a href="@Url.Action("ManageFAQCategory", "FAQCategory", new {  sCategoryID = BEEKP.Class.Encryption.Encrypt(Model.ListFAQCategory[i].category_id.ToString(), true)})" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                        }
                        
                        @if (Model.PagePermission.role_delete == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            @Html.Raw("|");
                            <a href="@Url.Action("DeleteFAQCategory", "FAQCategory", new { sCategoryID = BEEKP.Class.Encryption.Encrypt(Model.ListFAQCategory[i].category_id.ToString(),true)})" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                        }
                    </td>
                </tr>
            }





        </tbody>
    </table>
}
