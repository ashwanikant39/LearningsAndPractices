@model BEEKP.Areas.Admin.Models.AdminUserViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("Index", "AdminUser", FormMethod.Post, new { @id = "frmAdminUser", @name = "frmAdminUser" }))
{

    @Html.AntiForgeryToken()

    @*@Html.HiddenFor(model => Model.PagePermission.role_view)
        @Html.HiddenFor(model => Model.PagePermission.role_add)
        @Html.HiddenFor(model => Model.PagePermission.role_edit)
        @Html.HiddenFor(model => Model.PagePermission.role_delete)*@



    <div class="page-head">
        <div class="container">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>@*@Model.PagePermission.file_name*@</h1>
            </div>
            <!-- END PAGE TITLE -->

        </div>
    </div>
        <!-- END PAGE HEAD -->
        <!-- BEGIN PAGE CONTENT -->
    <div class="page-content">
        <div class="container">
            <!-- BEGIN PAGE CONTENT INNER -->
            <div class="row">
                <div class="col-md-12">

                    <div class="portlet light">
                        <div class="portlet-title">
                            <div class="caption">
                                <span class="caption-subject font-green-sharp bold uppercase">User List</span>
                            </div>
                        </div>
                        <div class="portlet-body">
                            @Html.Partial("_UserPartial", Model)
                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12">

                                    <button type="button" class="btn green" onclick="location.href='@Url.Action("ManageUser", "AdminUser", new { suser_id = BEEKP.Class.Encryption.Encrypt("0", true) })'">Add</button>

                                </div>
                            </div>
                        </div>
                    </div>



                </div>
            </div>
            <!-- END PAGE CONTENT INNER -->

        </div>
    </div>


    <div class="modal" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Modal Heading</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <table id="tblUserLog" class="table table-striped table-hover table-bordered action-column-custom">

                        <thead>
                            <tr>
                                <th>
                                    Mac Address
                                </th>
                                <th>
                                    IP Address
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @*<tr>
                                
                                <td>
                                    <label>user_type_name</label>
                                </td>
                                <td>
                                    <label>user_type_name</label>
                                </td>
                            </tr>*@
                        </tbody>
                    </table>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" data-dismiss="modal">Close</button>
                </div>

            </div>
        </div>
    </div>
}
@Scripts.Render("~/bundles/area/js/global")
@Scripts.Render("~/bundles/area/js/datatables")
