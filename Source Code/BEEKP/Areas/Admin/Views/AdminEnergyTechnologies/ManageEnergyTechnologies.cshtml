@model BEEKP.Areas.Admin.Models.EnergyTechnologiesManageModel
@{
    ViewBag.Title = "ManageFAQCategory";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("ManageEnergyTechnologies", "AdminEnergyTechnologies", FormMethod.Post, new { @id = "frmManageEnergyTechnologies", @name = "frmManageEnergyTechnologies" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => Model.EnergyTechnology.EE_technology_id)
    @Html.HiddenFor(model => Model.PagePermission.role_view)
    @Html.HiddenFor(model => Model.PagePermission.role_add)
    @Html.HiddenFor(model => Model.PagePermission.role_edit)
    @Html.HiddenFor(model => Model.PagePermission.role_delete)

    <div class="page-head">
        <div class="container">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>@Model.PagePermission.file_name</h1>
            </div>
            <!-- END PAGE TITLE -->

        </div>
    </div>
    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN VALIDATION STATES-->
                    <div class="portlet light">
                        <div class="portlet-title">
                            <div class="caption">
                                <span class="caption-subject font-green-sharp bold uppercase">Manage Energy Technologies</span> <small class="small-font-cuatom">Fields marked with asterisk (<span class="required-asterisk"> * </span>) are mandatory to fill in </small>
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <div class="horizontal-form ">
                                <div class="form-body form-body-small-padding">
                                    @*<h3 class="form-section page-title mandatory-note">&nbsp <small>Fields marked with asterisk (<span class="required-asterisk"> * </span>) are mandatory to fill in </small></h3>*@

                                    <!--body start-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Cluster Name<span class="required">* </span></label>
                                                <div class="col-md-8">
                                                    @Html.TextAreaFor(model => model.EnergyTechnology.clusters, new { @class = "form-control required", @id = "clusters", @Placeholder = "Cluster Name", @rows = "4" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Category Measures Name<span class="required">* </span></label>
                                                <div class="col-md-8">
                                                    @Html.DropDownListFor(m=>m.EnergyTechnology.category_measure_id, new SelectList(Model.ListCategoryMeasure, "category_measure_id", "category_measure_name", "--Select--"), new { @class = "form-control small-height-field", @tabindex = "1" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Suggestive EE Measures</label>
                                                <div class="col-md-8">
                                                    @Html.TextAreaFor(model => model.EnergyTechnology.EE_measure, new { @class = "form-control required", @id = "EE_measure", @Placeholder = "EE Measures", @rows = "4" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Active</label>
                                                <div class="col-md-8">
                                                    @Html.CheckBoxFor(model => model.EnergyTechnology.status, new { @class = "icheck", @id = "Status", @Placeholder = "Active" })
                                                    @Html.ValidationMessageFor(model => model.EnergyTechnology.status, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <!--Footer-->
                                <div class="form-actions right">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="button" class="btn default" onclick="location.href='@Url.Action("Index", "AdminEnergyTechnologies", new {})'">Back</button>
                                            <button type="submit" class="btn blue blue-custom" name="btnAction"><i class="fa fa-check"></i>Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- END FORM-->
                        </div>
                        <!-- END VALIDATION STATES-->
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- BEGIN VALIDATION STATES-->

}
@Scripts.Render("~/bundles/area/js/global")
@Scripts.Render("~/bundles/area/js/validate")
@Scripts.Render("~/bundles/area/appjs/energytechnologies_manage")