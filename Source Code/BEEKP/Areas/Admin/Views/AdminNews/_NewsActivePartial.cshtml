@model BEEKP.Areas.Admin.Models.AdminNewsViewModel

@if (Model.ListNewsActive != null)
{
    <table id="tblNewsActive" class="table table-striped table-hover table-bordered">

        <thead>
            <tr>
                <th>
                    News Image
                </th>
                <th>
                    News Title
                </th>
                <th>
                    News Date
                </th>
                <th>
                    News Short Description
                </th>
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @for (Int32 i = 0; i < Model.ListNewsActive.Count; i++)
            {

                <tr>
                    <td>
                        @if (Model.ListNewsActive[i].news_image_name != null && Model.ListNewsActive[i].news_image_name != "")
                        {
                            <img src="~/images/News/@Model.ListNewsActive[i].news_image_name" alt="News Inage" width="100px">
                        }
                        else
                        {
                            <img src=@BEEKP.Class.Constants.NO_IMAGE alt="News Image" width="100px">
                        }
                    </td>
                    <td>
                        <label>@Model.ListNewsActive[i].news_title</label>
                    </td>
                    <td>
                        <label>@Model.ListNewsActive[i].news_date </label>
                    </td>
                    <td>
                        <label>@Model.ListNewsActive[i].news_short_description </label>
                    </td>
                    <td align="center" valign="middle">
                        @if (Model.PagePermission.role_edit == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            <a href="@Url.Action("NewsAddEdit", "AdminNews", new { sNewsID = BEEKP.Class.Encryption.Encrypt(Model.ListNewsActive[i].news_id.ToString(), true) })" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                        }

                        @if (Model.PagePermission.role_delete == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            @Html.Raw("|");
                            <a href="@Url.Action("DeleteNews", "AdminNews", new { sNewsID = BEEKP.Class.Encryption.Encrypt(Model.ListNewsActive[i].news_id.ToString(),true),sNews_image_name = Model.ListNewsActive[i].news_image_name})" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
