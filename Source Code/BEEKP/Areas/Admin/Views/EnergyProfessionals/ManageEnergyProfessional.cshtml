
@model BEEKP.Areas.Admin.Models.EnergyProfessionalsManageModel
@{
    ViewBag.Title = "ManageDiscussionForum";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    div.radio input {
        opacity: 1 !important;
        margin-left: -14px !important;
    }
</style>
@using (Html.BeginForm("ManageEnergyProfessional", "EnergyProfessionals", FormMethod.Post, new { @id = "frmEnergyProfessional", @name = "frmEnergyProfessional" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => Model.EnergyProfessionals.energy_professional_id)


    @Html.HiddenFor(model => Model.PagePermission.role_view)
    @Html.HiddenFor(model => Model.PagePermission.role_add)
    @Html.HiddenFor(model => Model.PagePermission.role_edit)
    @Html.HiddenFor(model => Model.PagePermission.role_delete)

    <div class="page-head">
        <div class="container">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>@Model.PagePermission.file_name</h1>
            </div>
            <!-- END PAGE TITLE -->

        </div>
    </div>
    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN VALIDATION STATES-->
                    <div class="portlet light">
                        <div class="portlet-title">
                            <div class="caption">
                                <span class="caption-subject font-green-sharp bold uppercase">Manage Energy Professional</span> <small class="small-font-cuatom">Fields marked with asterisk (<span class="required-asterisk"> * </span>) are mandatory to fill in </small>
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <div class="horizontal-form ">
                                <div class="form-body form-body-small-padding">
                                    @*<h3 class="form-section page-title mandatory-note">&nbsp <small>Fields marked with asterisk (<span class="required-asterisk"> * </span>) are mandatory to fill in </small></h3>*@

                                    <!--body start-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Area Specialization Name<span class="required">* </span></label>
                                                <div class="col-md-8">
                                                    @Html.DropDownListFor(model => Model.EnergyProfessionals.area_specialization_id, new SelectList(Model.ListAreaSpecialization, "area_specialization_id", "area_specialization_name", ""), new { @class = "form-control required", @id = "ddlareaspeacialization", autocomplete = "off" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Name<span class="required">* </span></label>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(model => model.EnergyProfessionals.name, new { @class = "form-control required", @id = "name", @Placeholder = "Name" })
                                                    @Html.ValidationMessageFor(model => model.EnergyProfessionals.name, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Organization Address<span class="required">* </span></label>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(model => model.EnergyProfessionals.organization_address, new { @class = "form-control required", @id = "organization_address", @Placeholder = "Organization Address" })
                                                    @Html.ValidationMessageFor(model => model.EnergyProfessionals.organization_address, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Email-Id<span class="required">* </span></label>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(model => model.EnergyProfessionals.email_id, new { @class = "form-control required", @id = "email_id", @Placeholder = "Email-Id" })
                                                    @Html.ValidationMessageFor(model => model.EnergyProfessionals.email_id, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Active</label>
                                                <div class="col-md-8">
                                                    @Html.CheckBoxFor(model => model.EnergyProfessionals.status, new { @class = "icheck", @id = "Status", @Placeholder = "Status" })
                                                    @Html.ValidationMessageFor(model => model.EnergyProfessionals.status, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Approval Status<span class="required">* </span></label>
                                                <div class="col-md-8">
                                                    Pending
                                                    @Html.RadioButtonFor(model => model.EnergyProfessionals.approval_status, BEEKP.Class.Constants.APPROVAL_STATUS_PENDING)

                                                    Approved
                                                    @Html.RadioButtonFor(model => model.EnergyProfessionals.approval_status, BEEKP.Class.Constants.APPROVAL_STATUS_APPROVED)

                                                    Rejected
                                                    @Html.RadioButtonFor(model => model.EnergyProfessionals.approval_status, BEEKP.Class.Constants.APPROVAL_STATUS_REJECTED)


                                                    @Html.ValidationMessageFor(model => model.EnergyProfessionals.approval_status, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                        </div>
                                    </div>
                                </div>
                                <!--Footer-->
                                <div class="form-actions right">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="button" class="btn default" onclick="location.href='@Url.Action("Index", "EnergyProfessionals", new {})'">Back</button>
                                            <button type="submit" class="btn blue blue-custom" name="btnAction"><i class="fa fa-check"></i>Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- END FORM-->
                        </div>
                        <!-- END VALIDATION STATES-->
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- BEGIN VALIDATION STATES-->



}

