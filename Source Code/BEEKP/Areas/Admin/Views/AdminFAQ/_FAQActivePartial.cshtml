
@model BEEKP.Areas.Admin.Models.AdminFAQViewModel

@if (Model.ListFAQActive != null)
{
    <table id="tblFAQActive" class="table table-striped table-hover table-bordered">

        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Cluster Name
                </th>
                <th>
                    FAQ Question
                </th>
                @*<th>
                    FAQ Answer
                </th>*@
                <th>
                    Status
                </th>
                <th>
                    Remarks
                </th>
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @for (Int32 i = 0; i < Model.ListFAQActive.Count; i++)
            {
                var Active = "Acive";
                var Inactive = "Inactive";

                <tr>
                    <td>
                        <label>@Model.ListFAQActive[i].category_name</label>
                    </td>
                    <td>
                        <label>@Model.ListFAQActive[i].cluster_name </label>
                    </td>
                    <td>
                        <label>@Model.ListFAQActive[i].FAQ_question </label>
                    </td>
                    @if (Model.ListFAQActive[i].status == true)
                    {
                        <td>
                            <label>@Active</label>
                        </td>
                    }
                    else
                    {
                        <td>
                            <label>@Inactive</label>
                        </td>
                    }

                    <td>
                        <label>@Model.ListFAQActive[i].remarks</label>
                    </td>

                    <td align="center" valign="middle">
                        @if (Model.PagePermission.role_edit == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            <a href="@Url.Action("ManageFAQ", "AdminFAQ", new { sFAQ_id =BEEKP.Class.Encryption.Encrypt(Model.ListFAQActive[i].FAQ_id.ToString(), true)})" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                        }
                        
                        @if (Model.PagePermission.role_delete == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            @Html.Raw("|");
                            <a href="@Url.Action("DeleteFAQ", "AdminFAQ", new { sFAQ_id = BEEKP.Class.Encryption.Encrypt(Model.ListFAQActive[i].FAQ_id.ToString(),true)})" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                        }
                        
                    </td>
                </tr>
            }





        </tbody>
    </table>
}

