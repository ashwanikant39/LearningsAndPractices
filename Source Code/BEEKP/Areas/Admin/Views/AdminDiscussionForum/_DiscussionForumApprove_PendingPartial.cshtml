@model BEEKP.Areas.Admin.Models.AdminDiscussionForumApprovedViewModel
@if (Model.ListDiscussionForumApproval_Pending != null)
{
    <table id="tblDiscussionForumApprove_Pending" class="table table-striped table-hover table-bordered">

        <thead>
            <tr>
                <th>
                    Cluster Name
                </th>
                <th>
                    Forum Topic
                </th>
                <th>
                    Forum Description
                </th>
                <th>
                    Status
                </th>
                <th>
                    Remarks
                </th>
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @for (Int32 i = 0; i < Model.ListDiscussionForumApproval_Pending.Count; i++)
                {
                <tr>
                    <td>
                        <label>@Model.ListDiscussionForumApproval_Pending[i].cluster_name</label>
                    </td>
                    <td>
                        <label>@Model.ListDiscussionForumApproval_Pending[i].forum_topic </label>
                    </td>
                    <td>
                        <label>@Model.ListDiscussionForumApproval_Pending[i].forum_description </label>
                    </td>
                    @if (@Model.ListDiscussionForumApproval_Pending[i].status == true)
                    {
                        <td>
                            <label>Active </label>
                        </td>
                    }
                    else
                    {
                        <td>
                            <label>Inactive </label>
                        </td>
                    }
                    <td>
                        <label>@Model.ListDiscussionForumApproval_Pending[i].remarks </label>
                    </td>
                    <td align="center" valign="middle">
                        @if (Model.PagePermission.role_edit == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            <a href="@Url.Action("ApproveDiscussionForum", "AdminDiscussionForum", new { sforum_id = BEEKP.Class.Encryption.Encrypt(Model.ListDiscussionForumApproval_Pending[i].forum_id.ToString(), true) })" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                        }

                        @*<a href="@Url.Action("DeleteDiscussionForum", "DiscussionForum", new { sforum_id = Model[i].forum_id.ToString()})" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
}





