@model BEEKP.Areas.Admin.Models.DiscussionForumApproveModel
@{
    ViewBag.Title = "ApproveDiscussionForum";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("ApproveDiscussionForum", "AdminDiscussionForum", FormMethod.Post, new { @id = "frmApproveDiscussionForum", @name = "frmApproveDiscussionForum" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => Model.DiscussionForum.forum_id)


    <div class="page-head">
        <div class="container">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>Approved Discussion Forum<small>statistics & reports</small></h1>
            </div>
            <!-- END PAGE TITLE -->

        </div>
    </div>
    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN VALIDATION STATES-->
                    <div class="portlet light">
                        <div class="portlet-title">
                            <div class="caption">
                                <span class="caption-subject font-green-sharp bold uppercase">Approved Discussion Forum</span>
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <div class="horizontal-form ">
                                <div class="form-body form-body-small-padding">
                                    <h3 class="form-section page-title mandatory-note">&nbsp <small>Fields marked with asterisk (<span class="required-asterisk"> * </span>) are mandatory to fill in </small></h3>

                                    <!--body start-->
                                    <div class="row">

                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Forum Topic</label>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(model => model.DiscussionForum.forum_topic, new { @class = "form-control", @id = "forum_topic", @Placeholder = "Forum Topic", @readonly = "readonly" })
                                                    @Html.HiddenFor(model => model.DiscussionForum.forum_topic)
                                                    @Html.ValidationMessageFor(model => model.DiscussionForum.forum_topic, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">

                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Forum Description</label>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(model => model.DiscussionForum.forum_description, new { @class = "form-control", @id = "forum_topic", @Placeholder = "Forum Topic", @readonly = "readonly" })
                                                    @Html.HiddenFor(model => model.DiscussionForum.forum_description)
                                                    @Html.ValidationMessageFor(model => model.DiscussionForum.forum_description, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Active</label>
                                                <div class="col-md-8">
                                                    @Html.CheckBoxFor(model => model.DiscussionForum.status, new { @class = "icheck", @id = "Status", @Placeholder = "Status" })
                                                    @Html.ValidationMessageFor(model => model.DiscussionForum.status, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Remarks</label>
                                                <div class="col-md-8">
                                                    @Html.TextAreaFor(model => model.DiscussionForum.remarks, new { @class = "form-control", @id = "remarks", @Placeholder = "Remarks", @rows = "5" })
                                                    @Html.ValidationMessageFor(model => model.DiscussionForum.remarks, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">

                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Approval Status</label>
                                                <div class="col-md-8">

                                                    Pending
                                                    @Html.RadioButtonFor(model => model.DiscussionForum.approval_status, BEEKP.Class.Constants.APPROVAL_STATUS_PENDING)

                                                    Approved
                                                    @Html.RadioButtonFor(model => model.DiscussionForum.approval_status, BEEKP.Class.Constants.APPROVAL_STATUS_APPROVED)

                                                    Rejected
                                                    @Html.RadioButtonFor(model => model.DiscussionForum.approval_status, BEEKP.Class.Constants.APPROVAL_STATUS_REJECTED)


                                                    @Html.ValidationMessageFor(model => model.DiscussionForum.approval_status, "", new { @class = "text-denger" })
                                                </div>
                                            </div>



                                        </div>
                                    </div>
                                </div>
                                <!--Footer-->
                                <div class="form-actions right">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="button" class="btn default" onclick="location.href='@Url.Action("Approve", "AdminDiscussionForum", new {})'">Back</button>
                                            <button type="submit" class="btn blue blue-custom" name="btnAction"><i class="fa fa-check"></i>Save</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- END FORM-->
                        </div>
                        <!-- END VALIDATION STATES-->
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- BEGIN VALIDATION STATES-->



}
