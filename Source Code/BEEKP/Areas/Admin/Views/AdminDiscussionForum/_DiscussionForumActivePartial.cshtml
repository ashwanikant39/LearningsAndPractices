
@model BEEKP.Areas.Admin.Models.AdminDiscussionForumViewModel

@if (Model.ListDiscussionForumActive != null)
{
    <table id="tblDiscussionForumActive" class="table table-striped table-hover table-bordered">

        <thead>
            <tr>
                <th>
                    Cluster Name
                </th>
                <th>
                    Forum Topic
                </th>
                <th>
                    Forum Description
                </th>
                <th>
                    Approval Status
                </th>
                <th>
                    Remarks
                </th>
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @for (Int32 i = 0; i < Model.ListDiscussionForumActive.Count; i++)
                {
                <tr>
                    <td>
                        <label>@Model.ListDiscussionForumActive[i].cluster_name</label>
                    </td>
                    <td>
                        <label>@Model.ListDiscussionForumActive[i].forum_topic </label>
                    </td>
                    <td>
                        <label>@Model.ListDiscussionForumActive[i].forum_description </label>
                    </td>
                    <td>
                        <label>@Model.ListDiscussionForumActive[i].approval_status_message </label>
                    </td>
                    <td>
                        <label>@Model.ListDiscussionForumActive[i].remarks </label>
                    </td>
                    <td align="center" valign="middle">
                        @if (Model.PagePermission.role_edit == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            <a href="@Url.Action("ManageDiscussionForum", "AdminDiscussionForum", new { sforum_id = BEEKP.Class.Encryption.Encrypt(Model.ListDiscussionForumActive[i].forum_id.ToString(), true) })" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                        }

                        @if (Model.PagePermission.role_delete == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            @Html.Raw("|");
                            <a href="@Url.Action("DeleteDiscussionForum", "AdminDiscussionForum", new { sforum_id = BEEKP.Class.Encryption.Encrypt(Model.ListDiscussionForumActive[i].forum_id.ToString(), true) })" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                        }

                    </td>
                </tr>
            }
        </tbody>
    </table>
}





