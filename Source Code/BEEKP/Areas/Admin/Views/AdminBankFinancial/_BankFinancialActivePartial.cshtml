
@model BEEKP.Areas.Admin.Models.AdminBankFinancialViewModel

@if (Model.ListBankFinancialActive != null)
{
    <table id="tblBankFinancialActive" class="table table-striped table-hover table-bordered">

        <thead>
            <tr>
                <th>
                    Type of Institutions
                </th>
                <th>
                    Organisation Name
                </th>
                <th>
                    Address
                </th>
                <th>
                    Fax
                </th>
                <th>
                    Telephone
                </th>
                <th>
                    Email-Id
                </th>
                <th>
                    Cluster Name
                </th>
                <th>
                    Approval Status
                </th>
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @for (Int32 i = 0; i < Model.ListBankFinancialActive.Count; i++)
            {
                <tr>
                    <td>
                        <label>@Model.ListBankFinancialActive[i].institution_type_name</label>
                    </td>
                    <td>
                        <label>@Model.ListBankFinancialActive[i].organization_name </label>
                    </td>
                    <td>
                        <label>@Model.ListBankFinancialActive[i].address </label>
                    </td>
                    <td>
                        <label>@Model.ListBankFinancialActive[i].fax </label>
                    </td>
                    <td>
                        <label>@Model.ListBankFinancialActive[i].telephone </label>
                    </td>
                    <td>
                        <label>@Model.ListBankFinancialActive[i].email_id </label>
                    </td>
                    <td>
                        <label>@Model.ListBankFinancialActive[i].cluster_name </label>
                    </td>
                    <td>
                        <label>@Model.ListBankFinancialActive[i].approval_status_message </label>
                    </td>
                    <td align="center" valign="middle">
                        @if (Model.PagePermission.role_edit == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            <a href="@Url.Action("ManageBankFinancial", "AdminBankFinancial", new { sbank_financial_id =BEEKP.Class.Encryption.Encrypt(Model.ListBankFinancialActive[i].bank_financial_id.ToString(), true)})" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                        }
                        
                        @if (Model.PagePermission.role_delete == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        { 
                            @Html.Raw("|");
                            <a href="@Url.Action("DeleteBankFinancial", "AdminBankFinancial", new { sbank_financial_id = BEEKP.Class.Encryption.Encrypt(Model.ListBankFinancialActive[i].bank_financial_id.ToString(), true) })" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}