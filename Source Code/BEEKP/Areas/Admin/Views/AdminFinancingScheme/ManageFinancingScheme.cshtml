@model BEEKP.Areas.Admin.Models.FinancingSchemeManageModel
@{
    ViewBag.Title = "ManageFinancingScheme";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<style>
    div.radio input {
        opacity: 1 !important;
        margin-left: -14px !important;
    }
</style>
@using (Html.BeginForm("ManageFinancingScheme", "AdminFinancingScheme", FormMethod.Post, new { @id = "frmManageFinancingScheme", @name = "frmManageFinancingScheme" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => Model.FinancingScheme.financing_scheme_id)

    @Html.HiddenFor(model => Model.PagePermission.role_view)
    @Html.HiddenFor(model => Model.PagePermission.role_add)
    @Html.HiddenFor(model => Model.PagePermission.role_edit)
    @Html.HiddenFor(model => Model.PagePermission.role_delete)


    <div class="page-head">
        <div class="container">
            <!-- BEGIN PAGE TITLE -->
            <div class="page-title">
                <h1>@Model.PagePermission.file_name</h1>
            </div>
            <!-- END PAGE TITLE -->

        </div>
    </div>
    <div class="page-content">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <!-- BEGIN VALIDATION STATES-->
                    <div class="portlet light">
                        <div class="portlet-title">
                            <div class="caption">
                                <span class="caption-subject font-green-sharp bold uppercase">Manage Financing Scheme</span> <small class="small-font-cuatom">Fields marked with asterisk (<span class="required-asterisk"> * </span>) are mandatory to fill in </small>
                            </div>
                        </div>
                        <div class="portlet-body form">
                            <div class="horizontal-form ">
                                <div class="form-body form-body-small-padding">
                                    @*<h3 class="form-section page-title mandatory-note">&nbsp <small>Fields marked with asterisk (<span class="required-asterisk"> * </span>) are mandatory to fill in </small></h3>*@

                                    <!--body start-->
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Financing Scheme Name<span class="required">* </span></label>
                                                <div class="col-md-8">
                                                    @Html.TextBoxFor(model => model.FinancingScheme.financing_scheme_name, new { @class = "form-control required", @id = "financing_scheme_name", @Placeholder = "Financing Scheme Name" })
                                                    @Html.ValidationMessageFor(model => model.FinancingScheme.financing_scheme_name, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Financing Scheme Category <span class="required">* </span></label>
                                                <div class="col-md-8">
                                                    @Html.DropDownListFor(model => Model.FinancingScheme.financing_scheme_category_id, new SelectList(Model.ListFinancingSchemeCtaegory, "financing_scheme_category_id", "financing_scheme_category_name", ""), new { @class = "form-control required", @id = "ddlfinancingschemecategory", autocomplete = "off" })
                                                    @Html.ValidationMessageFor(model => model.FinancingScheme.financing_scheme_category_id, "", new { @class = "text-denger" })
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4">Status</label>
                                                <div class="col-md-8">
                                                    @Html.CheckBoxFor(model => model.FinancingScheme.status, new { @class = "icheck", @id = "status", @Placeholder = "Status" })
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-4"></label>
                                                <div class="col-md-8">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group clearfix">
                                                <label class="control-label col-md-2">Scheme Details</label>
                                                <div class="col-md-12" id="vckEditorEmailBody">
                                                    @*@Html.Raw(HttpUtility.HtmlDecode(@Html.TextAreaFor(model => model.Event.event_full_description, new { @class = "ckeditor form-control", @id = "ckEditorEventFullDescription", @rows = 3, @cols = 22, @onPaste = "return false" }).ToHtmlString()))
                                                        @Html.ValidationMessageFor(model => model.Event.event_full_description, "", new { @class = "text-denger" })*@
                                                    @Html.TextAreaFor(model => model.FinancingScheme.financing_scheme_details, new { @class = "ckeditor form-control", @id = "ckFinancingScheme", @rows = 3, @cols = 22 })
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <!--Footer-->
                                <div class="form-actions right">
                                    <div class="row">
                                        <div class="col-md-offset-3 col-md-9">
                                            <button type="button" class="btn default" onclick="location.href='@Url.Action("Index", "AdminFinancingScheme", new {})'">Back</button>
                                            <button type="submit" class="btn blue blue-custom" name="btnAction"><i class="fa fa-check"></i>Save</button>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <!-- END FORM-->
                        </div>
                        <!-- END VALIDATION STATES-->
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- BEGIN VALIDATION STATES-->



}
@Scripts.Render("~/bundles/area/js/global")
@Scripts.Render("~/bundles/area/js/validate")
@Scripts.Render("~/bundles/area/appjs/financingscheme_manage")
<script type="text/javascript" src="~/assets/global/plugins/ckeditor/ckeditor.js"></script>
<script>
    CKEDITOR.replace('ckFinancingScheme', {
        // Define the toolbar groups as it is a more accessible solution.
        toolbarGroups: [
            { "name": "basicstyles", "groups": ["basicstyles"] },
            //{ "name": "links", "groups": ["links"] },
            { "name": "paragraph", "groups": ["list", "blocks"] },
           // { "name": "document", "groups": ["mode"] },
            //{ "name": "insert", "groups": ["insert"] },
            //{ "name": "styles", "groups": ["styles"] }
           // { "name": "about", "groups": ["about"] }
        ],
        // Remove the redundant buttons from toolbar groups defined above.
        removeButtons: 'Underline,Strike,Subscript,Superscript,Anchor,Styles,Specialchar'
    });
</script>