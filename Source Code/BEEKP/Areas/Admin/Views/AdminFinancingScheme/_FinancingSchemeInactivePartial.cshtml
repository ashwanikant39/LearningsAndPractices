@model BEEKP.Areas.Admin.Models.AdminFinancingSchemeViewModel
@if (Model.ListFinancingSchemeInactive != null)
{
    <table id="tblFinancingSchemeInactive" class="table table-striped table-hover table-bordered">

        <thead>
            <tr>
                <th>
                  Scheme name
                </th>
                <th>
                   Scheme category
                </th>
                <th align="center" valign="middle">
                    Action
                </th>
            </tr>
        </thead>
        <tbody>

            @for (Int32 i = 0; i < Model.ListFinancingSchemeInactive.Count; i++)
                {
                <tr>
                    <td>
                        <label>@Model.ListFinancingSchemeInactive[i].financing_scheme_name </label>
                    </td>

                    <td>
                        <label>@Model.ListFinancingSchemeInactive[i].financing_scheme_category_name </label>
                    </td>
                    <td align="center" valign="middle">
                        @if (Model.PagePermission.role_edit == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            <a href="@Url.Action("ManageFinancingScheme", "AdminFinancingScheme", new { sfinancing_scheme_id =BEEKP.Class.Encryption.Encrypt(Model.ListFinancingSchemeInactive[i].financing_scheme_id.ToString(), true)})" title="" class="custom-edit-tooltip"><i class="fa fa-pencil"></i></a>
                        }
                        
                        @if (Model.PagePermission.role_delete == BEEKP.Class.Constants.PAGE_PERMISSION_YES)
                        {
                            @Html.Raw("|");
                            <a href="@Url.Action("DeleteFinancingScheme", "AdminFinancingScheme", new { sfinancing_scheme_id = BEEKP.Class.Encryption.Encrypt(Model.ListFinancingSchemeInactive[i].financing_scheme_id.ToString(), true) })" title="" data-toggle="confirmation" data-original-title="Are you sure ?"><i class="fa fa-trash-o"></i></a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
