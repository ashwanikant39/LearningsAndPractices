                <div class="col-md-3">@Html.DropDownList("Sector", (IEnumerable<SelectListItem>)ViewBag.Sectors, "--Select Sector--", htmlAttributes: new { @id = "ddlSector", @class = "form-control required" })</div>
                <div class="col-md-3">@Html.DropDownList("Cluster", (IEnumerable<SelectListItem>)ViewBag.Clusters, "--Select Cluster--", htmlAttributes: new { @id = "ddlCluster"})</div>
                <div class="col-md-3">
                    @*@Html.TextBox("txtDate", null, new {@id = "txtDate", @readonly = "readonly", @Placeholder = "Date" })*@
                </div>
                <div class="col-md-3" style="text-align:left"><input type="button" id="btnSearch" class="btn blue-custom btn-success" value="Search" /></div>
            </div>
            <hr />
            <div id="partialPage"><h1>Search...</h1></div>
            <br />

        </div>
    </div>
    <!-- END PAGE CONTENT INNER -->

</div>
<link href="~/css/jquery-ui.css" rel="stylesheet" />
<link href="~/css/jquery-ui-1-13-1.css" rel="stylesheet" />
<script>
    $(function () {
        $("#txtDate").datepicker();
    });

    $("#btnSearch").click(function () {
        var ddlSector = $("#ddlSector").val();
        var ddlCluster = $("#ddlCluster").val();
        var txtDate = "";
        $.ajax({
            type: "GET",
            url: "/Library/_DigitalSearch?sectorId=" + ddlSector + "&clusterId=" + ddlCluster + "&txtDate="+txtDate,
            contentType: "application/json; charset=utf-8",
            dataType: "html",
            success: function (response) {
                $('#partialPage').html(response);
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    });
	
	$("#ddlSector").change(function () {
        var ddlSector = $("#ddlSector").val();
        $("#ddlCluster").empty();
        $("#ddlCluster").append($("<option></option>").val("").html("--Select Cluster--"));

        $.ajax({
            type: "GET",
            url: "/Library/PopulateClusters?Id=" + ddlSector,
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (response) {
                debugger
                $.each(response, function (data, value) {

                    $("#ddlCluster").append($("<option></option>").val(value.Value).html(value.Text));
                });
            },
            failure: function (response) {
                alert(response.responseText);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    });
</script>



