@model BEEKP.Models.FinancingSchemeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "FinancingScheme", FormMethod.Post, new { @id = "frmFinancingScheme", @name = "frmFinancingScheme" }))
{
    @Html.AntiForgeryToken()

        <!-- BEGIN PAGE CONTENT -->
    <div class="container pt-10">
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="row">
            <div class="col-md-12">
                <div class="portlet light">
                    <div id="divmanufacturers">
                        <h4 class="text-theme-colored">FinancingScheme</h4>
                        <div id="acdClusterDetails" class="panel-group accordion">
                            @for (Int32 i = 0; i < Model.ListFinancialSchemeModel.Count; i++)
                            {
                                <div class="panel">
                                    <div class="panel-title"> <a data-parent="#acdClusterDetails" data-toggle="collapse" href="#@Model.ListFinancialSchemeModel[i].FinancingSchemeCtaegory.financing_scheme_category_id" class="" aria-expanded="true"> <span class="open-sub"></span> @Model.ListFinancialSchemeModel[i].FinancingSchemeCtaegory.financing_scheme_category_name</a> </div>
                                    <div id="@Model.ListFinancialSchemeModel[i].FinancingSchemeCtaegory.financing_scheme_category_id" class="panel-collapse collapse" role="tablist" aria-expanded="true">
                                        <div class="panel-content">
                                            @if (Model.ListFinancialSchemeModel[i].ListFinancingScheme != null && Model.ListFinancialSchemeModel[i].ListFinancingScheme.Count > 0)
                                            {
                                                <table id="tblEnergyProfessionals" class="table table-striped table-hover table-bordered table-small-padding table-Valign-middle">

                                                    <thead>
                                                        <tr>
                                                            <th>
                                                                Sl. No.
                                                            </th>
                                                            <th>
                                                                Scheme Name
                                                            </th>
                                                            <th>
                                                                Detail
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>

                                                        @for (Int32 j = 0; j < Model.ListFinancialSchemeModel[i].ListFinancingScheme.Count; j++)
                                                        {
                                                            Int32 Slno = j + 1;
                                                            <tr>
                                                                <td>
                                                                    @Slno
                                                                </td>
                                                                <td>
                                                                    @Model.ListFinancialSchemeModel[i].ListFinancingScheme[j].financing_scheme_name
                                                                </td>
                                                                <td valign="middle" align="center">
                                                                    @if (Model.ListFinancialSchemeModel[i].ListFinancingScheme[j].financing_scheme_details != null && Model.ListFinancialSchemeModel[i].ListFinancingScheme[j].financing_scheme_details != "")
                                                                    {
                                                                        <a href="@Url.Action("Detail", "FinancingScheme", new { sfinancing_scheme_id =BEEKP.Class.Encryption.Encrypt(Model.ListFinancialSchemeModel[i].ListFinancingScheme[j].financing_scheme_id.ToString(), true),viewtype = BEEKP.Class.Constants.ALL_TYPE})" title="" class="custom-edit-tooltip"><i class="fas fa-eye"></i></a>
                                                                    }
                                                                </td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            }

                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->

    </div>

}
