@model BEEKP.Models.ManufacturersViewModel

@if (Model.ListManufacturers != null)
{
    <table id="tblManufacturers" class="table table-striped table-hover table-bordered table-small-padding table-Valign-middle word-break-content">

        <thead>
            <tr>
                <th>
                    EE Equipment 
                </th>
                <th>
                    Manufacturer/Supplier
                </th>
                <th>
                    Location
                </th>
                <th class="width-70 text-align-center">
                    Detail
                </th>
            </tr>
        </thead>
        <tbody>

            @for (Int32 i = 0; i < Model.ListManufacturers.Count; i++)
            {
                <tr>
                    <td>
                        @Model.ListManufacturers[i].EE_equipment_name
                    </td>
                    <td>
                        @Model.ListManufacturers[i].name_manufacturer 
                    </td>
                    <td>
                        <label>@Model.ListManufacturers[i].contact_address </label>
                    </td>
                    <td valign="middle" align="center">
                        <a href="@Url.Action("Detail", "Manufacturers", new { smanufacturer_id =BEEKP.Class.Encryption.Encrypt(Model.ListManufacturers[i].manufacturer_id.ToString(), true)})" title="" class="custom-edit-tooltip"><i class="fas fa-eye"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

