@model BEEKP.Models.CaseStudyViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*-------------Datatable CSS------------------*@
<link href="~/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" rel="stylesheet" />

@*<link href="~/assets/global/plugins/datatables/extensions/Scroller/css/dataTables.scroller.css" rel="stylesheet" />

    <link href="~/assets/global/plugins/datatables/extensions/ColReorder/css/dataTables.colReorder.css" rel="stylesheet" />

    <link href="~/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.css" rel="stylesheet" />*@



@*-------------Datatable JS------------------*@

<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/assets/global/plugins/datatables/media/js/jquery.dataTables.js"></script>
<script src="~/assets/global/plugins/datatables/plugins/bootstrap/dataTables.bootstrap.js"></script>




@using (Html.BeginForm("Index", "CaseStudy", FormMethod.Post, new { @id = "frmCaseStudy", @name = "frmCaseStudy" }))
{
    @Html.AntiForgeryToken()

    <!-- BEGIN PAGE CONTENT -->
    <div class="container pt-10 pb-20">
        <!-- BEGIN PAGE CONTENT INNER -->
        <div class="row">
            <div class="col-md-12">

                <h4 class="text-theme-colored">Case Studies</h4>
                <hr />
                <div class="row">
                    <div class="col-md-12 mb-15">
                        <div class="bg-gray pt-7 clearfix">
                            <div class="col-sm-3" id="vareaspecialization">
                                <div class="form-group">
                                    <label>Cluster</label>
                                    @Html.DropDownList("Cluster", new SelectList(Model.ListCluster, "cluster_id", "cluster_name", ""), new { @class = "form-control small-height-field", @id = "ddlcluster", @tabindex = "1", @onchange = "javascript:LoadCaseStudy();" })
                                </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>&nbsp;</label><br />
                                    <button type="button" class="btn btn-primary">Search</button>
                                    <input type="button" class="btn btn-default" value="Reset" onclick="window.location.href='@Url.Action("Index","CaseStudy")'" />
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">

                <div class="portlet light">
                    @*<div class="portlet-title">
                            <div class="caption">
                                <span class="caption-subject font-green-sharp bold uppercase">Energy Professionals Forum List</span>
                            </div>
                        </div>*@

                    @*<h5>Energy Professionals Forum List</h5>*@

                    <div id="divcase" class="datatable-field-height">
                        @Html.Partial("_CaseStudyPartial", Model)
                    </div>
                </div>
            </div>
        </div>
        <!-- END PAGE CONTENT INNER -->

    </div>

}
<script type="text/javascript">

    $(document).ready(function () {

        TableAdvanced_CaseStudy()

    });

    AddAntiForgeryToken = function (data) {
        data.__RequestVerificationToken = $('#frmCaseStudy input[name=__RequestVerificationToken]').val();
        return data;
    };


    function TableAdvanced_CaseStudy() {

        if (!jQuery().dataTable) {
            return;
        }

        var table = $('#tblCaseStudy');

        var oTable = table.dataTable({

            "language": {
                "aria": {
                    "sortAscending": ": activate to sort column ascending",
                    "sortDescending": ": activate to sort column descending"
                },
                "emptyTable": "No data available in table",
                "info": "Showing _START_ to _END_ of _TOTAL_ entries",
                "infoEmpty": "No entries found",
                "infoFiltered": "(filtered1 from _MAX_ total entries)",
                "lengthMenu": "Show _MENU_ entries",
                "search": "Search:",
                "zeroRecords": "No matching records found"
            },

            "columnDefs": [{
                "orderable": false, // false = sorting not applicale
                "targets": [3] //for the columns
            }],
            //"order": [
            //    [0, 'asc'] // default column sorting
            //],
            "lengthMenu": [
                [5, 10, 15, 20, -1], // value - change per page values here
                [5, 10, 15, 20, "All"] // display- change per page values here
            ],
            // set the initial value
            "pageLength": 20
        });


    }

    function LoadCaseStudy() {

        var cluster_id = $("#ddlcluster").val();

        $("#divcase").html("");


        $.ajax({

            url: '/CaseStudy/CaseStudyListByCluster',
            data: AddAntiForgeryToken({ sClusterID: cluster_id }),
            async: false,
            type: 'POST',
            success: function (result) {

                if (result == 'sessionout') {
                    window.location.href = "/Account/LogOff";
                }
                else if (result.Data == 'error') {
                    window.location.href = "/Error/GeneralError";
                }
                else {
                    $("#divcase").html(result).show();
                    TableAdvanced_CaseStudy();
                    //Metronic.init();
                }
            },
            error: function (result) {
                isSuccess = result;
            }

        }).done(function () {
        });



    }

</script>